---
import MainLayout from '../layouts/MainLayout.astro';
const phrase: String = 'Hello World';
---

<MainLayout title="Home Page">
  <h2>{phrase}</h2>
  <p>Momento actual: {new Date().toLocaleTimeString()}</p>
  <p id="current-time">Momento actual real:</p>

  <footer>
    <p id="current-year">Año: 2023</p>
  </footer>
  <script>

    const currentTimeHtml = document.querySelector('#current-time') as HTMLElement;
    const currentYearHtml = document.querySelector('#current-year') as HTMLElement;

    const currentTime: String = new Date().toLocaleTimeString();
    const currentYear: number = new Date().getFullYear();

    currentTimeHtml.innerText = `Momento actual real: ${currentTime}`;
    currentYearHtml.innerText = `Año: ${currentYear}`;
  </script>
</MainLayout>
